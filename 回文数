class Solution {
    public boolean isPalindrome(int x) {
        if(x<0){
            return false;
        }
        
        String xd=x+"";
         int i=xd.length()/2;
        for(int j=0;j<i;j++){
            char c1=xd.charAt(j);
            char c2=xd.charAt(xd.length()-1-j); 
            if(c1!=c2){
            return false;

        }
       
        }
        return true;


    }
}
